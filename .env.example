# SECURITY WARNING: Copy this file to .env and update with your own values!

# Flask Secret Key (generate new one with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration
# For SQLite, use relative path - will be auto-converted to absolute path
# Example: sqlite:///instance/test.db (relative path)
# Or use absolute path: sqlite:////full/path/to/database.db (note the four slashes)
DATABASE_URI=sqlite:///instance/test.db

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Session Configuration
# Application configured for HTTP only (no SSL required)
PERMANENT_SESSION_LIFETIME=3600
